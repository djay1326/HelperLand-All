@model HelperlandProject.Models.Userr
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/images/favicon_img.png" rel="shortcut icon" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="~/css/userNewAccount.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <title>Register yourself</title>
</head>

<body>
    <div class="header1" id="topheader">
        <nav class="navbar navbar-expand-xl navbar-light" style="background-color: #525252; height: 70px;" id="tp">
            <a class="navbar-brand" href="#">
                <img src="~/images/white-logo-transparent-background.png" style="  width: 73px; height: 54px;">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <div class="nav-btn-color">
                            <a class="nav-link p-3 " href="#">Book now</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-btn1">
                            <a class="nav-link p-3" asp-controller="Starting" asp-action="prices">Prices & services</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-btn1">
                            <a class="nav-link p-3" href="#">Warranty</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-btn1">
                            <a class="nav-link p-3" href="#">Blog</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-btn1">
                            <a class="nav-link p-3" asp-controller="Starting" asp-action="Contact">Contact</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-btn-color">
                            <a class="nav-link p-3 " asp-controller="Starting" asp-action="Index">Login</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-btn-color">
                            <a class="nav-link p-3" asp-controller="Starting" asp-action="ServiceProvider">Become a Helper</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="prices_heading position-relative">
            <h1 class="font-weight-bolder">Create New Account</h1>
            <div class="prices_box">
                <div class="left_line"></div>
                <img src="~/images/separator.png" alt="" />
                <div class="right_line"></div>
            </div>
        </div>

        <div class="my-5">
            <form method="post" asp-controller="Starting" asp-action="NewAccount" class="createNewAccount">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" required name="firstname" placeholder="First name" asp-for="FirstName" class="bdrheight form-control">
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" required name="lastname" id="lastname" placeholder="Last name" asp-for="LastName" class="bdrheight form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="email" required name="Email" id="emailaddress" asp-for="Email" placeholder="Email Address" class="bdrheight form-control">
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <div class="d-flex">
                                <input type="text" value="+91" disabled style="max-width: 55px;" class="bdrheight form-control">
                                <input type="text" name="Mobile" id="mobilenumber" asp-for="Mobile" placeholder="Mobile number" class="bdrheight form-control">
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="password" required name="password" id="password" asp-for="Password" placeholder="Password" class="bdrheight form-control">
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="password" required name="confirmpassword" id="confirmpassword" asp-for="Confirmpassword" placeholder="Confirm password" class="bdrheight form-control">
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center my-1">
                    <input type="checkbox" name="termsandconditions" class="abb" required>
                    <label for="termsandconditions" class="abc ml-2 mt-2">I agree with the <span><a href="#" class="text-decoration-none clr2">terms and conditions</a></span> of Helperland GmbH.</label>
                </div>
                <div class="d-flex align-items-center my-1">
                    <input type="checkbox" name="privacypolicy" class="abb" required>
                    <label for="privacypolicy" class="abc ml-2 mt-2">I have read the <span><a href="#" class="text-decoration-none clr2">privacy policy.</a></span> </label>
                </div>
                <div class="text-center mt-4">
                    <button class="btn submitButton text-light rounded-pill" id="registerButton">Register</button>
                </div>
            </form>
            <div class="text-center mt-3 clr1">
                Already registered?
                <span><a class="clr2 text-decoration-none" asp-controller="Starting" asp-action="Index" data-bs-target="#loginPopup">Login now</a></span>
            </div>
        </div>
    </div>
    <footer class="font-small Rectangle-12">
        <div class="container d-flex flex-row justify-content-between align-items-center" style="max-width: 1800px;">
            <div class="footer-logo">
                <img src="~/images/white-logo-transparent-background.png" style="
        margin-top: 25px; float: left; margin-left: 15px;" class="img-fluid" alt="Responsive image">
            </div>
            <div class="footer-links">
                <div class="row text-center d-flex justify-content-center pt-5 mb-3">
                    <div class="col-md-2 mb-3">
                        <h6 class="text-uppercase">
                            <a asp-controller="Starting" asp-action="Index" style="color: #F1F1F1;">HOME</a>
                        </h6>
                    </div>
                    <div class="col-md-2 mb-3">
                        <h6 class="text-uppercase">
                            <a asp-controller="Starting" asp-action="About" style="color: #F1F1F1;">ABOUT</a>
                        </h6>
                    </div>
                    <div class="col-md-2 mb-3">
                        <h6 class="text-uppercase">
                            <a href="#!" style="color: #F1F1F1;">TESTIMONIALS</a>
                        </h6>
                    </div>
                    <div class="col-md-2 mb-3">
                        <h6 class="text-uppercase">
                            <a asp-controller="Starting" asp-action="Faqs" style="color: #F1F1F1;">FAQS</a>
                        </h6>
                    </div>
                    <div class="col-md-2 mb-3">
                        <h6 class="text-uppercase">
                            <a href="#!" style="color: #F1F1F1;">INSURANCE POLICY</a>
                        </h6>
                    </div>
                    <div class="col-md-2 mb-3">
                        <h6 class="text-uppercase">
                            <a href="#!" style="color: #F1F1F1;">IMPRESSUM</a>
                        </h6>
                    </div>
                </div>
            </div>
            <div class="footer-insta-facebook d-flex flex-row" style="margin-top: -75px;">
                <img src="~/images/facebook.svg" class="Forma-1">
                <img src="~/images/instagram.svg" class="Forma-2">
            </div>
        </div>
        <div class="footer-copyright text-center py-3 text-white text-center position-relative">
            Lorem ipsum dolor sit amet
            consectetur adipisicing elit. Sed nisi at nihil aperiam nesciunt deserunt odit fuga?
            <a href="#" class="text-decoration-none"> Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>